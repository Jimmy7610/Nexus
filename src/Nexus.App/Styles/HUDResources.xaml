<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- MOCKUP COLORS -->
    <Color x:Key="CyberCyanColor">#00D9FF</Color>
    <Color x:Key="WarningColor">#FF9500</Color>
    <Color x:Key="CriticalColor">#FF3B30</Color>
    <Color x:Key="SuccessColor">#4CD964</Color>
    <Color x:Key="BaseBackgroundColor">#090B10</Color>
    <Color x:Key="PanelBackgroundColor">#1A1E26</Color>
    <Color x:Key="BorderColor">#2A3645</Color>

    <!-- BRUSHES -->
    <SolidColorBrush x:Key="CyberCyanBrush" Color="{StaticResource CyberCyanColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="CriticalBrush" Color="{StaticResource CriticalColor}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="BaseBackgroundBrush" Color="{StaticResource BaseBackgroundColor}" />
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />

    <!-- TYPEFACE (Literal) -->
    <Style x:Key="HUDTextBase" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#E0E0E0" />
        <Setter Property="FontFamily" Value="Segoe UI Semibold" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="HUDHeader" TargetType="TextBlock" BasedOn="{StaticResource HUDTextBase}">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style x:Key="HUDTitle" TargetType="TextBlock" BasedOn="{StaticResource HUDTextBase}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style x:Key="HUDValueLarge" TargetType="TextBlock" BasedOn="{StaticResource HUDTextBase}">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <!-- PANEL (Literal Mockup Style) -->
    <Style x:Key="HUDPanel" TargetType="ContentControl">
        <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid Margin="4">
                        <!-- Beveled Background -->
                        <Border Background="{TemplateBinding Background}" CornerRadius="2" Opacity="0.95"/>
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="2" Opacity="0.4"/>
                        
                        <!-- Header Bar (Subtle) -->
                        <Border Height="28" VerticalAlignment="Top" Background="#05FFFFFF" CornerRadius="2,2,0,0"/>

                        <!-- Literal Accents -->
                        <Canvas IsHitTestVisible="False">
                            <Path Data="M0,4 L0,0 L4,0" Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="1" Canvas.Left="4" Canvas.Top="4" Opacity="0.6"/>
                            <Path Data="M-4,0 L0,0 L0,4" Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="1" Canvas.Right="4" Canvas.Top="4" Opacity="0.6"/>
                        </Canvas>

                        <ContentPresenter Margin="15,35,15,15"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GAUGE (Literal Mockup Style) -->
    <Style x:Key="HUDGauge" TargetType="ProgressBar">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <Ellipse Stroke="{StaticResource BorderBrush}" StrokeThickness="8" Opacity="0.1"/>
                        <Ellipse Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="8" 
                                 StrokeDashArray="1, 1" Opacity="0.8" Margin="2">
                             <Ellipse.Effect>
                                <DropShadowEffect BlurRadius="8" Color="{StaticResource CyberCyanColor}" ShadowDepth="0" Opacity="0.4"/>
                             </Ellipse.Effect>
                        </Ellipse>
                        
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, StringFormat={}{0}%}" 
                                       Style="{StaticResource HUDValueLarge}"/>
                            <TextBlock Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                       Style="{StaticResource HUDHeader}" HorizontalAlignment="Center" Opacity="0.5"/>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- CHART (Literal Mockup Style) -->
    <Style x:Key="HUDChartFrame" TargetType="ContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid>
                        <!-- Gridlines -->
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,1" Opacity="0.05">
                           <Border.Background>
                               <DrawingBrush TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                                   <DrawingBrush.Drawing>
                                       <GeometryDrawing Geometry="M0,0 L20,0 L20,20 L0,20 Z">
                                           <GeometryDrawing.Pen>
                                               <Pen Brush="{StaticResource BorderBrush}" Thickness="0.1"/>
                                           </GeometryDrawing.Pen>
                                       </GeometryDrawing>
                                   </DrawingBrush.Drawing>
                               </DrawingBrush>
                           </Border.Background>
                        </Border>
                        <ContentPresenter/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TABS (Literal Mockup Style) -->
    <Style x:Key="HUDTabItem" TargetType="RadioButton">
        <Setter Property="Foreground" Value="#80FFFFFF"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border Background="Transparent" Padding="15,5">
                        <ContentPresenter x:Name="Content"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                             <Setter Property="Foreground" Value="White"/>
                             <Setter Property="FontWeight" Value="Bold"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
