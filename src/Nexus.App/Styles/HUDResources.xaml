<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- HUD Colors -->
    <Color x:Key="CyberCyanColor">#00FFFF</Color>
    <Color x:Key="CyberCyanGlowColor">#2000FFFF</Color>
    <Color x:Key="WarningColor">#FF8A00</Color>
    <Color x:Key="CriticalColor">#FF2D2D</Color>
    <Color x:Key="SuccessColor">#00FF7A</Color>
    <Color x:Key="BaseBackgroundColor">#070A0F</Color>
    <Color x:Key="PanelBackgroundColor">#CC10161E</Color>
    <Color x:Key="BorderColor">#1E2A3A</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="CyberCyanBrush" Color="{StaticResource CyberCyanColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="CriticalBrush" Color="{StaticResource CriticalColor}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="BaseBackgroundBrush" Color="{StaticResource BaseBackgroundColor}" />
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />

    <!-- Typography -->
    <Style x:Key="HUDTextBase" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Opacity" Value="0.9" />
    </Style>

    <Style x:Key="HUDHeader" TargetType="TextBlock" BasedOn="{StaticResource HUDTextBase}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource CyberCyanBrush}" />
    </Style>

    <!-- Refined HUD Panel with Depth and Glow -->
    <Style x:Key="HUDPanel" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.5" ShadowDepth="2"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Specialized HUD Section Label -->
    <Style x:Key="HUDSectionLabel" TargetType="TextBlock" BasedOn="{StaticResource HUDTextBase}">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Opacity" Value="0.4" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="2,0,0,5" />
    </Style>

    <!-- Refined Circular Gauge (Arc Segments + Inner Glow) -->
    <Style x:Key="CircularGauge" TargetType="ProgressBar">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid Width="120" Height="120">
                        <Ellipse Stroke="{StaticResource BorderBrush}" StrokeThickness="2" Opacity="0.3"/>
                        <Ellipse Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="1" Margin="2" Opacity="0.1"/>
                        
                        <!-- Main Arc (Visualized as segmented ring for HUD feel) -->
                        <Ellipse Stroke="{TemplateBinding Foreground}" 
                                 StrokeThickness="6" 
                                 StrokeDashArray="0.5, 0.1" 
                                 Opacity="0.8" 
                                 Margin="4">
                            <Ellipse.Effect>
                                <DropShadowEffect BlurRadius="8" Color="{Binding Foreground.Color, RelativeSource={RelativeSource TemplatedParent}}" ShadowDepth="0"/>
                            </Ellipse.Effect>
                        </Ellipse>

                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, StringFormat={}{0:0}%}" 
                                       Style="{StaticResource HUDHeader}" 
                                       FontSize="22" 
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                       Style="{StaticResource HUDSectionLabel}" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,-2,0,0"/>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
