<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- HUD COLORS -->
    <Color x:Key="CyberCyanColor">#00FFFF</Color>
    <Color x:Key="WarningColor">#FF8A00</Color>
    <Color x:Key="CriticalColor">#FF2D2D</Color>
    <Color x:Key="SuccessColor">#00FF7A</Color>
    <Color x:Key="BaseBackgroundColor">#070A0F</Color>
    <Color x:Key="PanelBackgroundColor">#E610161E</Color>
    <Color x:Key="BorderColor">#2A3E59</Color>
    <Color x:Key="GlowColor">#2000FFFF</Color>
    <Color x:Key="InnerGlowColor">#0800FFFF</Color>

    <!-- BRUSHES -->
    <SolidColorBrush x:Key="CyberCyanBrush" Color="{StaticResource CyberCyanColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="CriticalBrush" Color="{StaticResource CriticalColor}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="BaseBackgroundBrush" Color="{StaticResource BaseBackgroundColor}" />
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="GlowBrush" Color="{StaticResource GlowColor}" />
    <SolidColorBrush x:Key="InnerGlowBrush" Color="{StaticResource InnerGlowColor}" />

    <!-- TYPOGRAPHY TOKENS (Balanced Hierarchy) -->
    <Style x:Key="HUDTextBase" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#D0FFFFFF" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="HUDTitle" TargetType="TextBlock" BasedOn="{StaticResource HUDTextBase}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource CyberCyanBrush}" />
        <Setter Property="Opacity" Value="0.8"/>
    </Style>

    <Style x:Key="HUDPanelHeader" TargetType="TextBlock" BasedOn="{StaticResource HUDTextBase}">
        <Setter Property="FontSize" Value="9" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource CyberCyanBrush}" />
        <Setter Property="Opacity" Value="0.4"/>
    </Style>

    <Style x:Key="HUDLabel" TargetType="TextBlock" BasedOn="{StaticResource HUDTextBase}">
        <Setter Property="FontSize" Value="9" />
        <Setter Property="Opacity" Value="0.3" />
    </Style>

    <Style x:Key="HUDMicroLabel" TargetType="TextBlock" BasedOn="{StaticResource HUDTextBase}">
        <Setter Property="FontSize" Value="8" />
        <Setter Property="Opacity" Value="0.15" />
        <Setter Property="FontFamily" Value="Consolas"/>
    </Style>

    <Style x:Key="HUDMonoReadout" TargetType="TextBlock" BasedOn="{StaticResource HUDTextBase}">
        <Setter Property="FontFamily" Value="Consolas" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- HUD PANEL (Intentional, Calm) -->
    <Style x:Key="HUDPanel" TargetType="ContentControl">
        <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Margin" Value="6" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid>
                        <Border Background="{TemplateBinding Background}" CornerRadius="2"/>
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="2" Opacity="0.5"/>
                        
                        <!-- Muted Corner Accents -->
                        <Canvas IsHitTestVisible="False" Opacity="0.15">
                            <Path Data="M0,4 L0,0 L4,0" Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="1" Canvas.Left="2" Canvas.Top="2"/>
                            <Path Data="M-4,0 L0,0 L0,4" Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="1" Canvas.Right="2" Canvas.Top="2"/>
                            <Path Data="M0,-4 L0,0 L4,0" Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="1" Canvas.Left="2" Canvas.Bottom="2"/>
                            <Path Data="M-4,0 L0,0 L0,-4" Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="1" Canvas.Right="2" Canvas.Bottom="2"/>
                        </Canvas>

                        <ContentPresenter Margin="15,18,15,15"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- CALM PERIPHERAL GAUGE (No Glow, Thinner Arcs) -->
    <Style x:Key="CircularGauge" TargetType="ProgressBar">
        <Setter Property="Foreground" Value="{StaticResource CyberCyanBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid Width="130" Height="130" Opacity="0.5">
                        <Ellipse Stroke="{StaticResource BorderBrush}" StrokeThickness="1" Opacity="0.2"/>
                        
                        <!-- Background Arc -->
                        <Ellipse Stroke="{StaticResource BorderBrush}" StrokeThickness="4" Margin="10" Opacity="0.1" StrokeDashArray="0.2, 0.05"/>

                        <!-- Foreground Arc (Value Representation) -->
                        <Ellipse Stroke="{TemplateBinding Foreground}" 
                                 StrokeThickness="4" 
                                 Margin="10"
                                 Opacity="0.6" 
                                 StrokeDashArray="0.2, 0.05"/>

                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, StringFormat={}{0:0}}" 
                                       Style="{StaticResource HUDMonoReadout}" 
                                       FontSize="24" 
                                       HorizontalAlignment="Center" 
                                       Opacity="0.8"/>
                            <TextBlock Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                       Style="{StaticResource HUDPanelHeader}" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- CENTER DOMINANT CHART -->
    <Style x:Key="HUDChartFrame" TargetType="ContentControl">
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="#02FFFFFF"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid>
                        <!-- Primary Gridlines -->
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,1" Opacity="0.05">
                           <Border.Background>
                               <DrawingBrush TileMode="Tile" Viewport="0,0,50,50" ViewportUnits="Absolute">
                                   <DrawingBrush.Drawing>
                                       <GeometryDrawing Geometry="M0,0 L50,0 L50,50 L0,50 Z">
                                           <GeometryDrawing.Pen>
                                               <Pen Brush="{StaticResource BorderBrush}" Thickness="0.2"/>
                                           </GeometryDrawing.Pen>
                                       </GeometryDrawing>
                                   </DrawingBrush.Drawing>
                               </DrawingBrush>
                           </Border.Background>
                        </Border>

                        <ContentPresenter/>

                        <!-- Primary Focus Accents (Brackets) -->
                        <Path Data="M0,8 L0,0 L8,0" Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="1.5" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-1" Opacity="0.6"/>
                        <Path Data="M0,-8 L0,0 L8,0" Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="1.5" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="-1" Opacity="0.6"/>
                        <Path Data="M0,8 L0,0 L-8,0" Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="1.5" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="-1" Opacity="0.6"/>
                        <Path Data="M0,-8 L0,0 L-8,0" Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="1.5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="-1" Opacity="0.6"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- HUD TABS (Clean High-Contrast) -->
    <Style x:Key="HUDTabItem" TargetType="RadioButton">
        <Setter Property="Foreground" Value="#60FFFFFF"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid Background="Transparent" Margin="20,0">
                        <StackPanel>
                            <ContentPresenter x:Name="Content" Margin="0,15"/>
                            <Border x:Name="Indicator" Height="2" Background="{StaticResource CyberCyanBrush}" 
                                    Margin="0,0,0,0" CornerRadius="1" Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Indicator" Property="Visibility" Value="Visible"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Standard Button Style -->
    <Style x:Key="HUDButton" TargetType="Button">
        <Setter Property="Background" Value="#05FFFFFF"/>
        <Setter Property="Foreground" Value="#B0FFFFFF"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="15,5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="BG" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="1" Opacity="0.6"/>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BG" Property="BorderBrush" Value="{StaticResource CyberCyanBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter TargetName="BG" Property="Opacity" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
