<Window x:Class="Nexus.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Nexus.App.ViewModels"
        xmlns:conv="clr-namespace:Nexus.App.Converters"
        Title="NEXUS" Height="740" Width="1040"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Border Background="{StaticResource BaseBackgroundBrush}" 
            BorderBrush="{StaticResource CyberCyanBrush}" 
            BorderThickness="1" 
            CornerRadius="4"
            MouseDown="Border_MouseDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/> <!-- Header -->
                <RowDefinition Height="180"/> <!-- Peripherals: Gauges -->
                <RowDefinition Height="*"/>   <!-- Primary Content -->
                <RowDefinition Height="35"/>  <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0" Margin="30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Path Data="M0,0 L12,0 L12,12 L0,12 Z M3,3 L9,3 L9,9 L3,9 Z" Fill="{StaticResource CyberCyanBrush}" Width="12" Margin="0,0,15,0" Opacity="0.7"/>
                    <TextBlock Text="NEXUS" Style="{StaticResource HUDTitle}"/>
                </StackPanel>

                <!-- Navigation Tabs -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton Content="OVERVIEW" Style="{StaticResource HUDTabItem}" Command="{Binding NavigateCommand}" CommandParameter="OVERVIEW" IsChecked="True"/>
                    <RadioButton Content="STORAGE" Style="{StaticResource HUDTabItem}" Command="{Binding NavigateCommand}" CommandParameter="STORAGE"/>
                    <RadioButton Content="AI CORE" Style="{StaticResource HUDTabItem}" Command="{Binding NavigateCommand}" CommandParameter="AI"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentMetrics.Uptime, Mode=OneWay, StringFormat={}SYS_UPTIME: {0:hh}h {0:mm}m}" Style="{StaticResource HUDPanelHeader}" Margin="20,0"/>
                    <Button Content="↺" Command="{Binding RestartCommand}" Style="{StaticResource HUDButton}" Width="36" Height="30" Margin="5,0"/>
                    <Button Content="✕" Click="Close_Click" Style="{StaticResource HUDButton}" Width="36" Height="30" Margin="5,0" Foreground="{StaticResource CriticalBrush}"/>
                </StackPanel>
            </Grid>

            <!-- PERIPHERAL GAUGES (Calm Telemetry) -->
            <Grid Grid.Row="1" Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ProgressBar Grid.Column="0" Value="{Binding CurrentMetrics.CpuUsage, Mode=OneWay}" Tag="CPU" Style="{StaticResource CircularGauge}"/>
                <ProgressBar Grid.Column="1" Value="{Binding CurrentMetrics.GpuUsage, Mode=OneWay}" Tag="GPU" Style="{StaticResource CircularGauge}" Foreground="{StaticResource WarningBrush}"/>
                <ProgressBar Grid.Column="2" Value="{Binding CurrentMetrics.RamUsagePercentage, Mode=OneWay}" Tag="RAM" Style="{StaticResource CircularGauge}" Foreground="{StaticResource SuccessBrush}"/>
                
                <ItemsControl Grid.Column="3" ItemsSource="{Binding Disks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate><Grid/></ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ProgressBar Value="{Binding UsagePercentage, Mode=OneWay}" Tag="{Binding DriveName}" Style="{StaticResource CircularGauge}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <!-- ACTIVE CONTENT -->
            <Grid Grid.Row="2" Margin="25,10">
                
                <!-- OVERVIEW VIEW (Centered Hierarchy) -->
                <Grid Visibility="{Binding CurrentView, Converter={StaticResource ViewToVisibilityConverter}, ConverterParameter=OVERVIEW}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="280"/> <!-- Muted Side -->
                        <ColumnDefinition Width="*"/>   <!-- Primary Center -->
                        <ColumnDefinition Width="280"/> <!-- Muted Side -->
                    </Grid.ColumnDefinitions>

                    <!-- Left Sidebar (Muted) -->
                    <ContentControl Grid.Column="0" Style="{StaticResource HUDPanel}" Opacity="0.6">
                        <Grid>
                            <TextBlock Text="NETWORK TELEMETRY" Style="{StaticResource HUDPanelHeader}"/>
                            <StackPanel VerticalAlignment="Center" Margin="0,30,0,0">
                                <Grid Margin="0,8">
                                    <TextBlock Text="UPLINK" Style="{StaticResource HUDLabel}"/>
                                    <TextBlock Text="{Binding NetworkMetrics.UploadSpeedMbps, StringFormat={}{0:F2} MBPS}" Style="{StaticResource HUDMonoReadout}" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Margin="0,8">
                                    <TextBlock Text="DOWNLINK" Style="{StaticResource HUDLabel}"/>
                                    <TextBlock Text="{Binding NetworkMetrics.DownloadSpeedMbps, StringFormat={}{0:F2} MBPS}" Style="{StaticResource HUDMonoReadout}" HorizontalAlignment="Right"/>
                                </Grid>
                                <Border Height="1" Background="{StaticResource BorderBrush}" Opacity="0.1" Margin="0,20"/>
                                <TextBlock Text="LINK STABLE" Style="{StaticResource HUDMicroLabel}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </ContentControl>

                    <!-- PRIMARY CENTER: PERFORMANCE MATRIX -->
                    <ContentControl Grid.Column="1" Style="{StaticResource HUDPanel}">
                        <Grid>
                            <TextBlock Text="LIVE PERFORMANCE MATRIX" Style="{StaticResource HUDPanelHeader}" Opacity="0.8"/>
                            <ContentControl Style="{StaticResource HUDChartFrame}" Margin="0,30,0,10">
                                <Grid>
                                    <Path Data="M0,80 L30,70 L60,75 L90,40 L120,50 L150,20 L180,30 L210,10" 
                                          Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="2.5" 
                                          Stretch="Fill" Margin="40">
                                        <Path.Effect>
                                            <DropShadowEffect BlurRadius="12" Color="{StaticResource CyberCyanColor}" ShadowDepth="0" Opacity="0.6"/>
                                        </Path.Effect>
                                    </Path>
                                </Grid>
                            </ContentControl>
                        </Grid>
                    </ContentControl>

                    <!-- Right Sidebar (Muted) -->
                    <ContentControl Grid.Column="2" Style="{StaticResource HUDPanel}" Opacity="0.6">
                        <Grid>
                            <TextBlock Text="CORE PROCESSES" Style="{StaticResource HUDPanelHeader}"/>
                            <ItemsControl ItemsSource="{Binding CurrentMetrics.Processes}" Margin="0,30,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <TextBlock Text="{Binding Name}" Style="{StaticResource HUDTextBase}" FontSize="11" Opacity="0.7"/>
                                            <TextBlock Text="{Binding FormattedRam}" Style="{StaticResource HUDMonoReadout}" HorizontalAlignment="Right" FontSize="11" Opacity="0.6"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </ContentControl>
                </Grid>

                <!-- STORAGE VIEW (Clean Analytics) -->
                <Grid Visibility="{Binding CurrentView, Converter={StaticResource ViewToVisibilityConverter}, ConverterParameter=STORAGE}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="360"/>
                    </Grid.ColumnDefinitions>

                    <ContentControl Grid.Column="0" Style="{StaticResource HUDPanel}">
                        <Grid>
                            <TextBlock Text="STORAGE ANALYTICS" Style="{StaticResource HUDPanelHeader}"/>
                            <ScrollViewer Margin="0,35,0,0" VerticalScrollBarVisibility="Hidden">
                                <StackPanel>
                                    <ItemsControl ItemsSource="{Binding StorageResult.TopFolders}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,6">
                                                    <TextBlock Text="{Binding Path}" Style="{StaticResource HUDTextBase}" Opacity="0.6" MaxWidth="450" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding FormattedSize}" Style="{StaticResource HUDMonoReadout}" HorizontalAlignment="Right"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </ContentControl>

                    <ContentControl Grid.Column="1" Style="{StaticResource HUDPanel}" Opacity="0.8">
                        <Grid>
                            <TextBlock Text="SCAN STATUS" Style="{StaticResource HUDPanelHeader}"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding StorageResult.TotalFiles, StringFormat={}{0:N0}}" Style="{StaticResource HUDMonoReadout}" FontSize="36" HorizontalAlignment="Center" Margin="0,10"/>
                                <TextBlock Text="FILES INDEXED" Style="{StaticResource HUDLabel}" HorizontalAlignment="Center"/>
                                
                                <Button Content="RESCAN" Command="{Binding StartScanCommand}" CommandParameter="C:\" 
                                        Style="{StaticResource HUDButton}" Margin="40,40,40,10" Height="40"
                                        IsEnabled="{Binding StorageResult.IsScanning, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverted}"/>
                                
                                <Button Content="ABORT" Command="{Binding CancelScanCommand}" 
                                        Style="{StaticResource HUDButton}" Margin="40,0" Foreground="{StaticResource CriticalBrush}"
                                        Visibility="{Binding StorageResult.IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </Grid>
                    </ContentControl>
                </Grid>

                <!-- AI CORE (Minimalist Interlink) -->
                <Grid Visibility="{Binding CurrentView, Converter={StaticResource ViewToVisibilityConverter}, ConverterParameter=AI}">
                    <ContentControl Style="{StaticResource HUDPanel}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="260"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Margin="10">
                                <TextBlock Text="NEURAL INTERLINK" Style="{StaticResource HUDPanelHeader}"/>
                                <ListBox ItemsSource="{Binding ChatHistory}" Background="Transparent" BorderThickness="0" Margin="0,30,0,60" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="0,15" Opacity="0.8">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Role}" Style="{StaticResource HUDPanelHeader}" FontSize="8"/>
                                                    <TextBlock Text="{Binding Content}" Style="{StaticResource HUDTextBase}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <TextBox Grid.Row="1" Text="{Binding ChatInput, UpdateSourceTrigger=PropertyChanged}" 
                                         VerticalAlignment="Bottom" Height="40"
                                         Background="#05FFFFFF" Foreground="White" BorderBrush="{StaticResource BorderBrush}" 
                                         Padding="15,0" VerticalContentAlignment="Center" Opacity="0.8">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Enter" Command="{Binding SendChatCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                            </Grid>

                            <StackPanel Grid.Column="1" Margin="20,40,10,10">
                                <TextBlock Text="MODEL_INFO" Style="{StaticResource HUDPanelHeader}"/>
                                <TextBlock Text="{Binding ActiveAiModel}" Style="{StaticResource HUDMonoReadout}" Margin="0,10,0,30" Opacity="0.6"/>
                                <Button Content="HEALTH REPORT" Command="{Binding QuickPromptCommand}" CommandParameter="Summarize system health." Style="{StaticResource HUDButton}" Margin="0,5"/>
                                <Button Content="OPTIMIZE" Command="{Binding QuickPromptCommand}" CommandParameter="Suggest optimizations." Style="{StaticResource HUDButton}" Margin="0,5"/>
                            </StackPanel>
                        </Grid>
                    </ContentControl>
                </Grid>

            </Grid>

            <!-- FOOTER -->
            <Grid Grid.Row="3" Margin="30,0">
                <TextBlock Text="NEXUS MISSION CONTROL // v1.2.1-CALM" Style="{StaticResource HUDMicroLabel}" VerticalAlignment="Center" Opacity="0.15"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="{Binding AiStatus}" Style="{StaticResource HUDPanelHeader}" Opacity="0.6"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
