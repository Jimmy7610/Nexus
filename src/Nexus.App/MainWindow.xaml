<Window x:Class="Nexus.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2000/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2000/xaml"
        xmlns:vm="clr-namespace:Nexus.App.ViewModels"
        Title="NEXUS" Height="700" Width="1000"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Border Background="{StaticResource BaseBackgroundBrush}" 
            BorderBrush="{StaticResource CyberCyanBrush}" 
            BorderThickness="1" 
            CornerRadius="8"
            MouseDown="Border_MouseDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/> <!-- Header -->
                <RowDefinition Height="*"/>   <!-- Main Content -->
                <RowDefinition Height="30"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Path Data="M0,0 L15,0 L15,15 L0,15 Z" Fill="{StaticResource CyberCyanBrush}" Width="15" Margin="0,0,10,0"/>
                    <TextBlock Text="SYSTEM CONTROL CENTER" Style="{StaticResource HUDHeader}" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="OVERVIEW" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="10,0" Foreground="{StaticResource CyberCyanBrush}"/>
                    <Button Content="PERFORMANCE" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="10,0" Foreground="Gray"/>
                    <Button Content="STORAGE" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="10,0" Foreground="Gray"/>
                    <Button Content="AI COPILOT" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="10,0" Foreground="Gray"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentMetrics.Uptime, StringFormat={}Uptime: {0:hh}h {0:mm}m}" Style="{StaticResource HUDTextBase}" Margin="10,0" Opacity="0.6"/>
                    <Button Content="⚙" Command="{Binding OpenWindowsSettingsCommand}" Foreground="White" Width="30" Background="Transparent" BorderThickness="0" ToolTip="Windows Personalization"/>
                    <Button Content="_" Foreground="White" Width="20" Background="Transparent" BorderThickness="0" Click="Minimize_Click"/>
                    <Button Content="X" Foreground="White" Width="20" Background="Transparent" BorderThickness="0" Click="Close_Click"/>
                </StackPanel>
            </Grid>

            <!-- Main Content (Overview) -->
            <Grid Grid.Row="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="180"/> <!-- Top Gauges -->
                    <RowDefinition Height="*"/>   <!-- Panels -->
                </Grid.RowDefinitions>

                <!-- TOP GAUGES -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ProgressBar Grid.Column="0" Value="{Binding CurrentMetrics.CpuUsage}" Tag="CPU USAGE" Style="{StaticResource CircularGauge}" Foreground="{StaticResource CyberCyanBrush}" Margin="10"/>
                    <ProgressBar Grid.Column="1" Value="{Binding CurrentMetrics.GpuUsage}" Tag="GPU USAGE" Style="{StaticResource CircularGauge}" Foreground="{StaticResource WarningBrush}" Margin="10" Visibility="Visible"/>
                    <ProgressBar Grid.Column="2" Value="{Binding CurrentMetrics.RamUsagePercentage}" Tag="RAM" Style="{StaticResource CircularGauge}" Foreground="{StaticResource SuccessBrush}" Margin="10"/>
                    
                    <ItemsControl Grid.Column="3" ItemsSource="{Binding Disks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ProgressBar Value="{Binding UsagePercentage}" Tag="{Binding DriveName}" Style="{StaticResource CircularGauge}" Foreground="{StaticResource SuccessBrush}" Margin="5"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="1"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Grid>

                <!-- MIDDLE PANELS -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0">
                        <Border Style="{StaticResource HUDPanel}" Height="120">
                            <Grid Margin="10">
                                <TextBlock Text="NETWORK" Style="{StaticResource HUDTextBase}" Opacity="0.6" Margin="0,0,0,5"/>
                                <StackPanel VerticalAlignment="Center" Margin="0,15,0,0">
                                    <TextBlock Text="Download: 32.5 MB/s" Foreground="{StaticResource SuccessBrush}"/>
                                    <TextBlock Text="Upload: 8.2 MB/s" Foreground="{StaticResource WarningBrush}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <Border Style="{StaticResource HUDPanel}" Height="200">
                             <Grid Margin="10">
                                <TextBlock Text="STORAGE ANALYSIS" Style="{StaticResource HUDTextBase}" Opacity="0.6"/>
                                <StackPanel Margin="0,20,0,0">
                                    <ItemsControl ItemsSource="{Binding StorageResult.TopFolders}" MaxHeight="100">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,1">
                                                    <TextBlock Text="{Binding Name}" Foreground="Gray" FontSize="10"/>
                                                    <TextBlock Text="{Binding FormattedSize}" Foreground="{StaticResource CyberCyanBrush}" HorizontalAlignment="Right" FontSize="10"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <Button Content="SCAN NOW" Command="{Binding StartScanCommand}" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="{StaticResource CyberCyanBrush}" Margin="0,10,0,0"/>
                                    <ProgressBar Value="{Binding StorageResult.ProgressPercentage}" Height="2" Margin="0,5,0,0" Foreground="{StaticResource CyberCyanBrush}" Visibility="{Binding StorageResult.IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                             </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Center Column (Graphs Placeholder) -->
                    <Border Grid.Column="1" Style="{StaticResource HUDPanel}">
                         <Grid Margin="10">
                             <TextBlock Text="LIVE PERFORMANCE" Style="{StaticResource HUDTextBase}" Opacity="0.6"/>
                             <Path Data="M0,150 L20,130 L40,140 L60,100 L80,110 L100,50 L120,60 L140,20" 
                                   Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="1" 
                                   VerticalAlignment="Center" HorizontalAlignment="Stretch" Stretch="Fill"/>
                         </Grid>
                    </Border>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="2">
                         <Border Style="{StaticResource HUDPanel}" Height="150">
                             <Grid Margin="10">
                                <TextBlock Text="ACTIVE PROCESSES" Style="{StaticResource HUDTextBase}" Opacity="0.6"/>
                                <ItemsControl ItemsSource="{Binding CurrentMetrics.Processes}" Margin="0,20,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2">
                                                <TextBlock Text="{Binding Name}" Foreground="White" HorizontalAlignment="Left" FontSize="10"/>
                                                <TextBlock Text="{Binding FormattedRam}" Foreground="{StaticResource SuccessBrush}" HorizontalAlignment="Right" FontSize="10"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                             </Grid>
                         </Border>

                         <Border Style="{StaticResource HUDPanel}" Height="170" BorderBrush="{StaticResource CyberCyanBrush}">
                             <Grid Margin="10">
                                <TextBlock Text="AI COPILOT" Style="{StaticResource HUDHeader}" FontSize="12" Opacity="0.8"/>
                                <ListBox ItemsSource="{Binding ChatHistory}" Background="Transparent" BorderThickness="0" Margin="0,20,0,30" FontSize="10" Foreground="White" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock TextWrapping="Wrap" Margin="0,2">
                                                <Run Text="{Binding Role}" Foreground="{StaticResource CyberCyanBrush}" FontWeight="Bold"/>: 
                                                <Run Text="{Binding Content}"/>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <TextBox Text="{Binding ChatInput, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Bottom" Height="25" Background="#15FFFFFF" Foreground="White" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderBrush}" Padding="5">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Enter" Command="{Binding SendChatCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                                <TextBlock Text="{Binding AiStatus}" Style="{StaticResource HUDTextBase}" FontSize="8" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,5,28" Opacity="0.5"/>
                             </Grid>
                         </Border>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Footer -->
            <Grid Grid.Row="2" Margin="10,0">
                <TextBlock Text="NEXUS COMMAND SYSTEM v1.0.0" Style="{StaticResource HUDTextBase}" FontSize="10" VerticalAlignment="Center" Opacity="0.4"/>
                <TextBlock Text="LOCAL CONNECTION: STABLE" Style="{StaticResource HUDTextBase}" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="{StaticResource SuccessBrush}"/>
            </Grid>
        </Grid>
    </Border>
</Window>
