<Window x:Class="Nexus.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Nexus.App.ViewModels"
        xmlns:conv="clr-namespace:Nexus.App.Converters"
        Title="NEXUS" Height="740" Width="1100"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Border Background="{StaticResource BaseBackgroundBrush}" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="8"
            MouseDown="Border_MouseDown">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/> <!-- Header -->
                <RowDefinition Height="220"/> <!-- Gauges + AI Diagnostics -->
                <RowDefinition Height="*"/>   <!-- Main Logic Grid -->
                <RowDefinition Height="30"/>  <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- HEADER (Literal) -->
            <Grid Grid.Row="0" Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Path Data="M0,0 L10,0 L10,10 L0,10 Z M2,2 L8,2 L8,8 L2,8 Z" Fill="{StaticResource CyberCyanBrush}" Width="10" Margin="0,0,15,0"/>
                    <TextBlock Text="SYSTEM CONTROL CENTER" Style="{StaticResource HUDTitle}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton Content="OVERVIEW" Style="{StaticResource HUDTabItem}" IsChecked="True"/>
                    <RadioButton Content="PERFORMANCE" Style="{StaticResource HUDTabItem}"/>
                    <RadioButton Content="STORAGE" Style="{StaticResource HUDTabItem}"/>
                    <RadioButton Content="NETWORK" Style="{StaticResource HUDTabItem}"/>
                    <RadioButton Content="AI COPILOT" Style="{StaticResource HUDTabItem}"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentMetrics.Uptime, Mode=OneWay, StringFormat={}Uptime: {0:hh}h {0:mm}m}" Style="{StaticResource HUDHeader}" Margin="20,0"/>
                    <TextBlock Text="Power: 85% (Plugged In)" Style="{StaticResource HUDHeader}" Opacity="0.7"/>
                    <Button Content="✕" Click="Close_Click" Margin="20,0,0,0" Foreground="{StaticResource CriticalBrush}" Background="Transparent" BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>

            <!-- TOP ROW (Gauges + AI Diagnostics) -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="550"/> <!-- 4 Gauges -->
                    <ColumnDefinition Width="*"/>   <!-- AI Diagnostics -->
                </Grid.ColumnDefinitions>

                <!-- 4 PERIPHERAL GAUGES -->
                <ContentControl Style="{StaticResource HUDPanel}">
                    <UniformGrid Columns="4">
                        <ProgressBar Value="{Binding CurrentMetrics.CpuUsage}" Tag="CPU USAGE" Style="{StaticResource HUDGauge}" Margin="10"/>
                        <ProgressBar Value="{Binding CurrentMetrics.GpuUsage}" Tag="GPU USAGE" Style="{StaticResource HUDGauge}" Margin="10"/>
                        <ProgressBar Value="{Binding CurrentMetrics.RamUsagePercentage}" Tag="RAM" Style="{StaticResource HUDGauge}" Margin="10"/>
                        <ProgressBar Value="45" Tag="DISK C:" Style="{StaticResource HUDGauge}" Margin="10"/>
                    </UniformGrid>
                </ContentControl>

                <!-- AI DIAGNOSTICS -->
                <ContentControl Grid.Column="1" Style="{StaticResource HUDPanel}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,-25,0,0">
                             <Ellipse Width="8" Height="8" Fill="{StaticResource WarningBrush}" Margin="0,0,10,0"/>
                             <TextBlock Text="AI DIAGNOSTICS" Style="{StaticResource HUDHeader}"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,5">
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Ellipse Width="10" Height="10" Fill="{StaticResource SuccessBrush}" Margin="0,0,15,0"/>
                                <TextBlock Text="System running smoothly." Style="{StaticResource HUDTextBase}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Ellipse Width="10" Height="10" Fill="{StaticResource CriticalBrush}" Margin="0,0,15,0"/>
                                <TextBlock Text="High RAM usage detected." Style="{StaticResource HUDTextBase}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Ellipse Width="10" Height="10" Fill="{StaticResource SuccessBrush}" Margin="0,0,15,0"/>
                                <TextBlock Text="2 large files found on drive C:" Style="{StaticResource HUDTextBase}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Ellipse Width="10" Height="10" Fill="{StaticResource WarningBrush}" Margin="0,0,15,0"/>
                                <TextBlock Text="Suggested Cleanup Ready:" Style="{StaticResource HUDTextBase}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ContentControl>
            </Grid>

            <!-- MAIN DATA GRID (3 Columns) -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT COLUMN -->
                <StackPanel Grid.Column="0">
                    <ContentControl Style="{StaticResource HUDPanel}" Height="180">
                        <Grid>
                            <TextBlock Text="NETWORK" Style="{StaticResource HUDHeader}" Margin="0,-25,0,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <Grid Margin="0,5">
                                    <TextBlock Text="Download" Style="{StaticResource HUDTextBase}"/>
                                    <TextBlock Text="32.5 MB/s" Style="{StaticResource HUDHeader}" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Margin="0,5">
                                    <TextBlock Text="Upload" Style="{StaticResource HUDTextBase}"/>
                                    <TextBlock Text="8.2 MB/s" Style="{StaticResource HUDHeader}" HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </ContentControl>

                    <ContentControl Style="{StaticResource HUDPanel}" Height="220">
                        <Grid>
                            <TextBlock Text="STORAGE ANALYSIS" Style="{StaticResource HUDHeader}" Margin="0,-25,0,0"/>
                            <StackPanel>
                                <TextBlock Text="LARGEST FOLDERS" Style="{StaticResource HUDHeader}" Opacity="0.6" Margin="0,5"/>
                                <Rectangle Height="60" Fill="#10FFFFFF" Margin="0,5"/>
                                <Border Height="1" Background="{StaticResource BorderBrush}" Opacity="0.2" Margin="0,10"/>
                                <Grid Margin="0,2">
                                    <TextBlock Text="Total Files: 285.600" Style="{StaticResource HUDTextBase}"/>
                                </Grid>
                                <Grid Margin="0,2">
                                    <TextBlock Text="Duplicates: 1,532" Style="{StaticResource HUDTextBase}"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </ContentControl>
                </StackPanel>

                <!-- CENTER COLUMN (Dominant Charts) -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ContentControl Grid.Row="0" Style="{StaticResource HUDPanel}">
                        <ContentControl Style="{StaticResource HUDChartFrame}">
                             <Path Data="M0,80 L50,70 L100,75 L150,40 L200,50 L250,20 L300,30 L350,10" 
                                   Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="2" Stretch="Fill" Margin="20"/>
                        </ContentControl>
                    </ContentControl>

                    <ContentControl Grid.Row="1" Style="{StaticResource HUDPanel}">
                        <ContentControl Style="{StaticResource HUDChartFrame}">
                             <Path Data="M0,50 L50,60 L100,55 L150,80 L200,70 L250,90 L300,75 L350,85" 
                                   Stroke="{StaticResource WarningBrush}" StrokeThickness="2" Stretch="Fill" Margin="20"/>
                        </ContentControl>
                    </ContentControl>
                </Grid>

                <!-- RIGHT COLUMN -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="180"/>
                        <RowDefinition Height="140"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ContentControl Grid.Row="0" Style="{StaticResource HUDPanel}">
                        <Grid>
                            <TextBlock Text="ACTIVE PROCESSES" Style="{StaticResource HUDHeader}" Margin="0,-25,0,0"/>
                            <StackPanel Margin="0,5">
                                <Grid Margin="0,2">
                                    <TextBlock Text="Chrome" Style="{StaticResource HUDTextBase}"/>
                                    <TextBlock Text="850 MB" Style="{StaticResource HUDHeader}" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Margin="0,2">
                                    <TextBlock Text="Discord" Style="{StaticResource HUDTextBase}"/>
                                    <TextBlock Text="420 MB" Style="{StaticResource HUDHeader}" HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </ContentControl>

                    <ContentControl Grid.Row="1" Style="{StaticResource HUDPanel}">
                        <Grid>
                            <TextBlock Text="NETWORK MONITOR" Style="{StaticResource HUDHeader}" Margin="0,-25,0,0"/>
                            <ContentControl Style="{StaticResource HUDChartFrame}">
                                 <Path Data="M0,80 L50,60 L100,90 L150,70 L200,85" Stroke="{StaticResource CyberCyanBrush}" Stretch="Fill" Margin="5"/>
                            </ContentControl>
                        </Grid>
                    </ContentControl>

                    <!-- AI COPILOT (Literal) -->
                    <ContentControl Grid.Row="2" Style="{StaticResource HUDPanel}">
                        <Grid>
                            <TextBlock Text="AI COPILOT" Style="{StaticResource HUDHeader}" Margin="0,-25,0,0"/>
                            <StackPanel VerticalAlignment="Bottom">
                                <TextBlock Text="How can I assist you?" Style="{StaticResource HUDTextBase}" Margin="0,0,0,10"/>
                                <Button Content="Find large Files" Style="{StaticResource HUDTabItem}" HorizontalAlignment="Left" Margin="0,2"/>
                                <Button Content="System Health Report" Style="{StaticResource HUDTabItem}" HorizontalAlignment="Left" Margin="0,2"/>
                                <Border Height="35" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="0,10,0,0">
                                     <TextBlock Text="Ask me anything..." Opacity="0.4" Margin="10,0"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </ContentControl>
                </Grid>
                
            </Grid>

            <!-- FOOTER -->
            <Border Grid.Row="3" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Margin="10,0">
                <Grid>
                     <TextBlock Text="NEXUS MISSION CONTROL // LITERAL_TRANSLATION_v1.0" Style="{StaticResource HUDHeader}" Opacity="0.3" VerticalAlignment="Center"/>
                     <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                          <Ellipse Width="6" Height="6" Fill="{StaticResource SuccessBrush}" VerticalAlignment="Center" Margin="10,0"/>
                          <TextBlock Text="AI CORE: ACTIVE" Style="{StaticResource HUDHeader}" VerticalAlignment="Center"/>
                     </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
