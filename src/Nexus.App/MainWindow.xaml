<Window x:Class="Nexus.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Nexus.App.ViewModels"
        Title="NEXUS" Height="700" Width="1000"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Border Background="{StaticResource BaseBackgroundBrush}" 
            BorderBrush="{StaticResource CyberCyanBrush}" 
            BorderThickness="1" 
            CornerRadius="4"
            MouseDown="Border_MouseDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/> <!-- Header -->
                <RowDefinition Height="180"/> <!-- Gauges -->
                <RowDefinition Height="*"/>   <!-- Active Content -->
                <RowDefinition Height="30"/>  <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- HEADER (Mission Control Branding) -->
            <Grid Grid.Row="0" Margin="15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Path Data="M0,0 L12,0 L12,12 L0,12 Z" Fill="{StaticResource CyberCyanBrush}" Width="12" Margin="0,0,12,0" Opacity="0.8"/>
                    <TextBlock Text="SYSTEM CONTROL CENTER" Style="{StaticResource HUDHeader}" VerticalAlignment="Center" Opacity="0.8"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="OVERVIEW" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="15,0" Foreground="{StaticResource CyberCyanBrush}" FontWeight="Bold"/>
                    <Button Content="PERFORMANCE" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="15,0" Foreground="Gray" Opacity="0.6"/>
                    <Button Content="STORAGE" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="15,0" Foreground="Gray" Opacity="0.6"/>
                    <Button Content="AI COPILOT" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="15,0" Foreground="Gray" Opacity="0.6"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentMetrics.Uptime, Mode=OneWay, StringFormat={}UPTIME: {0:hh}h {0:mm}m}" Style="{StaticResource HUDSectionLabel}" Margin="10,0" VerticalAlignment="Center"/>
                    <Button Content="⚙" Command="{Binding OpenWindowsSettingsCommand}" Foreground="White" Width="30" Background="Transparent" BorderThickness="0" Opacity="0.6"/>
                    <Button Content="—" Foreground="White" Width="20" Background="Transparent" BorderThickness="0" Click="Minimize_Click" Opacity="0.6"/>
                    <Button Content="✕" Foreground="White" Width="20" Background="Transparent" BorderThickness="0" Click="Close_Click" Opacity="0.6"/>
                </StackPanel>
            </Grid>

            <!-- TOP GAUGES (quad circular) -->
            <Grid Grid.Row="1" Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ProgressBar Grid.Column="0" Value="{Binding CurrentMetrics.CpuUsage, Mode=OneWay}" Tag="CPU CORE" Style="{StaticResource CircularGauge}" Foreground="{StaticResource CyberCyanBrush}"/>
                <ProgressBar Grid.Column="1" Value="{Binding CurrentMetrics.GpuUsage, Mode=OneWay}" Tag="GPU LOAD" Style="{StaticResource CircularGauge}" Foreground="{StaticResource WarningBrush}"/>
                <ProgressBar Grid.Column="2" Value="{Binding CurrentMetrics.RamUsagePercentage, Mode=OneWay}" Tag="VRAM ADDR" Style="{StaticResource CircularGauge}" Foreground="{StaticResource SuccessBrush}"/>
                
                <ItemsControl Grid.Column="3" ItemsSource="{Binding Disks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ProgressBar Value="{Binding UsagePercentage, Mode=OneWay}" Tag="{Binding DriveName}" Style="{StaticResource CircularGauge}" Foreground="{StaticResource SuccessBrush}" Height="120" Width="120"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="1"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>

            <!-- ACTIVE CONTENT -->
            <Grid Grid.Row="2" Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/> <!-- Left: Net + Storage -->
                    <ColumnDefinition Width="*"/>   <!-- Center: Performance Chart -->
                    <ColumnDefinition Width="320"/> <!-- Right: Processes + AI -->
                </Grid.ColumnDefinitions>

                <!-- LEFT COLUMN -->
                <StackPanel Grid.Column="0">
                    <Border Style="{StaticResource HUDPanel}" Height="140">
                        <Grid Margin="12">
                            <TextBlock Text="NETWORK TELEMETRY" Style="{StaticResource HUDSectionLabel}"/>
                            <StackPanel VerticalAlignment="Center" Margin="0,20,0,0">
                                <Grid Margin="0,5">
                                    <TextBlock Text="DOWNLINK" Style="{StaticResource HUDTextBase}" FontSize="10" Opacity="0.6"/>
                                    <TextBlock Text="32.5 MB/s" Foreground="{StaticResource SuccessBrush}" HorizontalAlignment="Right" FontWeight="Bold"/>
                                </Grid>
                                <Grid Margin="0,5">
                                    <TextBlock Text="UPLINK" Style="{StaticResource HUDTextBase}" FontSize="10" Opacity="0.6"/>
                                    <TextBlock Text="8.2 MB/s" Foreground="{StaticResource WarningBrush}" HorizontalAlignment="Right" FontWeight="Bold"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <Border Style="{StaticResource HUDPanel}" Height="280">
                        <Grid Margin="12">
                            <TextBlock Text="STORAGE ARCHITECTURE" Style="{StaticResource HUDSectionLabel}"/>
                            <StackPanel Margin="0,25,0,0">
                                <ItemsControl ItemsSource="{Binding StorageResult.TopFolders}" MaxHeight="140">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2">
                                                <TextBlock Text="{Binding Name}" Style="{StaticResource HUDTextBase}" FontSize="10" Opacity="0.5"/>
                                                <TextBlock Text="{Binding FormattedSize}" Foreground="{StaticResource CyberCyanBrush}" HorizontalAlignment="Right" FontSize="10"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <Button Content="INITIATE SCAN" Command="{Binding StartScanCommand}" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="{StaticResource CyberCyanBrush}" Margin="0,15,0,0" FontSize="10" HorizontalAlignment="Left" FontWeight="Bold"/>
                                <ProgressBar Value="{Binding StorageResult.ProgressPercentage}" Height="1" Margin="0,10,0,0" Foreground="{StaticResource CyberCyanBrush}" Visibility="{Binding StorageResult.IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- CENTER CHANNEL (Visual Anchor) -->
                <Border Grid.Column="1" Style="{StaticResource HUDPanel}" BorderBrush="{StaticResource CyberCyanBrush}" Opacity="0.9">
                    <Grid Margin="15">
                        <TextBlock Text="LIVE PERFORMANCE MATRIX" Style="{StaticResource HUDSectionLabel}"/>
                        <Path Data="M0,200 L40,180 L80,190 L120,150 L160,160 L200,80 L240,100 L280,30 L320,50 L360,10" 
                              Stroke="{StaticResource CyberCyanBrush}" StrokeThickness="1.5" 
                              VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Stretch="Fill" Margin="0,30,0,10">
                            <Path.Effect>
                                <DropShadowEffect BlurRadius="15" Color="{StaticResource CyberCyanColor}" ShadowDepth="0"/>
                            </Path.Effect>
                        </Path>
                        <Rectangle Height="1" Fill="{StaticResource BorderBrush}" VerticalAlignment="Bottom" Margin="0,0,0,10" Opacity="0.2"/>
                    </Grid>
                </Border>

                <!-- RIGHT COLUMN -->
                <StackPanel Grid.Column="2">
                    <Border Style="{StaticResource HUDPanel}" Height="180">
                        <Grid Margin="12">
                            <TextBlock Text="ACTIVE CORE PROCESSES" Style="{StaticResource HUDSectionLabel}"/>
                            <ItemsControl ItemsSource="{Binding CurrentMetrics.Processes}" Margin="0,25,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,3">
                                            <TextBlock Text="{Binding Name}" Style="{StaticResource HUDTextBase}" FontSize="11"/>
                                            <TextBlock Text="{Binding FormattedRam}" Foreground="{StaticResource SuccessBrush}" HorizontalAlignment="Right" FontSize="11" Opacity="0.8"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>

                    <!-- AI COPILOT (Resident System Entity) -->
                    <Border Style="{StaticResource HUDPanel}" Height="240" BorderBrush="{StaticResource CyberCyanBrush}">
                        <Grid Margin="12">
                            <TextBlock Text="NEURAL CORE STATUS" Style="{StaticResource HUDSectionLabel}"/>
                            <TextBlock Text="{Binding AiStatus}" Style="{StaticResource HUDTextBase}" FontSize="9" HorizontalAlignment="Right" Foreground="{StaticResource SuccessBrush}" Opacity="0.8"/>
                            
                            <ListBox ItemsSource="{Binding ChatHistory}" Background="Transparent" BorderThickness="0" Margin="0,25,0,40" FontSize="11" Foreground="White" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" Margin="0,4" Opacity="0.9">
                                            <Run Text="[" Foreground="{StaticResource CyberCyanBrush}"/>
                                            <Run Text="{Binding Role}" Foreground="{StaticResource CyberCyanBrush}" FontWeight="Bold"/>
                                            <Run Text="]" Foreground="{StaticResource CyberCyanBrush}"/> 
                                            <Run Text="{Binding Content}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Grid VerticalAlignment="Bottom">
                                <TextBox Text="{Binding ChatInput, UpdateSourceTrigger=PropertyChanged}" Height="28" Background="#10FFFFFF" Foreground="White" BorderThickness="1,1,1,1" BorderBrush="{StaticResource BorderBrush}" Padding="8,4">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Enter" Command="{Binding SendChatCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                                <TextBlock Text="CMD>" Foreground="{StaticResource CyberCyanBrush}" VerticalAlignment="Center" Margin="8,0,0,0" Visibility="{Binding ChatInput.Length, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverted}" IsHitTestVisible="False" Opacity="0.5" FontSize="10"/>
                            </Grid>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- FOOTER -->
            <Grid Grid.Row="3" Margin="15,0">
                <TextBlock Text="NEXUS MISSION CONTROL v1.1.0-HUD" Style="{StaticResource HUDTextBase}" FontSize="9" VerticalAlignment="Center" Opacity="0.3"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Ellipse Width="6" Height="6" Fill="{StaticResource SuccessBrush}" Margin="0,0,8,0"/>
                    <TextBlock Text="QUANTUM LINK: STABLE" Style="{StaticResource HUDSectionLabel}" Margin="0" Opacity="0.6"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
